@using Sertec.View.Models
@model PresupuestoTrabajoTercerosViewModel
<div class="table table-striped">
    <table id="TabTrapTer" class="table table-light">
        <thead>
            <tr>
                <td>TRABAJOS TERCEROS</td>
                <td>VALOR</td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="col-sm-4">
                    @Html.TextBoxFor(m => m.Terceros, new { @class = "form-control", Style = "width:90%", required = "required", maxlength = 50 })
                    @Html.ValidationMessageFor(m => m.Terceros, "", new { @class = "text-danger" })
                </td>
                <td class="col-sm-4">
                    @Html.TextBoxFor(m => m.ValTer, new { @class = "form-control", Style = "width:90%", required = "required", maxlength = 50 })
                    @Html.ValidationMessageFor(m => m.ValTer, "", new { @class = "text-danger" })
                </td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="2" style="text-align: left;">
                    <input type="button" class="btn btn-success btn-sm" id="Btn_AgregarTrabTer" value="Agregar Trabajo" />
                </td>
            </tr>
        </tfoot>
    </table>
</div>
