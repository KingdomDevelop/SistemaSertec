                            <tr>
                                <td>
                                    <a href="#">Medio de Aprobación</a>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-xs-4" style="width:100%">
                        <table class="table table-striped">
                            <tr>
                                <td>
                                    @Html.RadioButtonFor(m => m.PresupuestoFirmado, "1", new { @id = "maCopia", @class = "radio", onclick = "SeleccionTextoMA()" })
                                </td>
                                <td>
                                    Copia de presupuesto firmado
