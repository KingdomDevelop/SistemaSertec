                                <td>
                                    @if (Model.PresupuestoFirmado)
                                    {
                                        @Html.RadioButtonFor(m => m.PresupuestoFirmado, "1", new { @id = "maCopia", @class = "radio", disabled = "disabled", @checked = true })
