@using Sertec.View.Models
@model IList<PresupuestoTrabajoTercerosViewModel>
@{
    IList<PresupuestoTrabajoTercerosViewModel> prueba = new List<PresupuestoTrabajoTercerosViewModel>();
    prueba = (List<PresupuestoTrabajoTercerosViewModel>)Session["terceros"];
}
<div class="table table-striped">
    <table id="TabTrapTer" class="table table-light">
        <thead>
            <tr>
                <td>TRABAJOS TERCEROS</td>
                <td>VALOR</td>
            </tr>
        </thead>
        <tbody>
            @if (prueba == null || prueba.Count() == 0)
            {
                <tr>
                    <td colspan="6" class="mensaje">
                        No existen terceros registrados.
                    </td>
                </tr>
            }
            else
            {
                foreach (PresupuestoTrabajoTercerosViewModel item in prueba)
                {
                    <tr>
                        <td class="col-sm-4">
                            @item.Terceros
                        </td>
                        <td class="col-sm-4">
                            @item.ValTer
                        </td>
                        <td class="col-sm-1">
                            <input class="hidden repuestoId" value="@item.TercerosId" />
                            <button class="btn btn-danger btn-sm" onclick="eliminarTerceros(@item.TercerosId)">Eliminar</button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>