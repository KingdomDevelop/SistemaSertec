@using Sertec.View.Models
@model  ContabilidadViewModel
<div class="col-md-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4>DETALLE:</h4>
        </div>
        <div class="panel-body">
            <!--      Primera Tabla --->
            <div class="table-responsive">
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <td>Obra</td>
                            <td>
                                @Html.TextBoxFor(m => m.Obra, new { id = "TxtObra", @readonly = "readonly" })
                            </td>
                            <td>Empresa</td>
                            <td>Rut</td>
                        </tr>
                        <tr>
                            <td>Fecha Aprobación</td>
                            <td>
                                <input type="text" id="TxtFechaApro" name="FechaApro">
                            </td>
                            <td>
                                <input type="text" id="TxtEmpresa" name="Empresa">
                            </td>
                            <td>
                                <input type="text" id="TxtRut" name="Rut">
                            </td>
                        </tr>
                        <tr>
                            <td>Ascensor</td>
                            <td>
                                @Html.TextBoxFor(m => m.Ascensor, new { id = "TxtAscen", @readonly = "readonly" })

                            </td>
                            <td>Dirección</td>
                            <td>@Html.TextBoxFor(m => m.Direccion, new { id = "TxtDire" })</td>
                        </tr>
                        <tr>
                            <td>Tecnico Emisor</td>
                            <td> @Html.TextBoxFor(m => m.TecEmisor, new { id = "TxtTecEm" })</td>
                            <td> </td>
                            <td>..</td>
                        </tr>
                        <tr>
                            <td>Supervisor</td>
                            <td>
                                @Html.TextBoxFor(m => m.Supervisor, new { id = "TxtSupervisor" })
                            </td>
                            <td>..</td>
                            <td>..</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <!--/panel-body-->
    </div>
    <!--/panel-->
    <hr />
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4>New Requests</h4>
        </div>
        <div class="panel-body">
            <div class="list-group">
                <a href="#" class="list-group-item active">INFORMO A UD. QUE CON ESTA FECHA SE HA APROBADO LO SIGUIENTE:</a>
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <td style="width:10%"></td>
                            <td style="width:10%"></td>
                            <td style="width:10%"></td>
                            <td style="width:10%"></td>
                            <td style="width:30%">PRESUPUESTO REP N°</td>
                            <td style="width:40%"><input type="text" id="TextFechaApro" name="FechaApro"></td>
                        </tr>
                    </tbody>
                </table>
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <td style="width:20%">APROBADO POR</td>
                            <td style="width:50%">
                                @Html.TextBoxFor(m => m.PersonaAprobacion, new { id = "Txt_APROBPOR" })
                            </td>
                            <td style="width:30%"> VENDEDOR</td>
                        </tr>
                        <tr>
                            <td style="width:20%">TELEFONO CONTACTO</td>
                            <td style="width:50%">
                                @Html.TextBoxFor(m => m.TelefonoContacto, new { id = "Txt_TELCONTA" })
                            </td>
                            <td style="width:30%">
                                @Html.TextBoxFor(m => m.Vendedor, new { id = "Txt_VENDEDOR" })
                            </td>
                        </tr>
                    </tbody>
                </table>
                <a href="#" class="list-group-item">BREVE DESCRIPCION DE LA REPARACIÓN A EFECTUAR</a>
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <td>
                                @*<textarea name="detalleArea" id="tf_detalleArea" rows="4" cols="50">Enter text here...</textarea>*@
                                @Html.TextBoxFor(m => m.DetalleDescrip, new { id = "tf_detalleArea", @readonly = "readonly", @rows = 4, @cols = 5 })
                            </td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td></td>
                            <td colspan="2" style="text-align: right;">
                                <button id="btnCrearTer" class="btn btn-success btn-sm" style="display: @Model.Activado;" onclick="CrearAprobacion(@Model.Cotizacion)">Agregar Aprobación</button>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>


