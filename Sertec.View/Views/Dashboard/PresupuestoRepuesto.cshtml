@using Sertec.View.Models
@model PresupuestoRepuestoViewModel
<div class="table table-striped">
    <table id="TabRepRep" class="table order-list">
        <thead>
            <tr>
                <td>REPUESTOS Y/O REPARACION</td>
                <td>CANT.</td>
                <td>CODIGO</td>
                <td>VALOR UNITARIO</td>
                <td>SUB TOTAL</td>
                <td>HP</td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="col-sm-2">
                    @Html.TextBoxFor(m => m.Respuesto, new { id = "repuestoId", @class = "form-control", Style = "width:90%", maxlength = 50 })
                    @Html.ValidationMessageFor(m => m.Respuesto, "", new { @class = "text-danger" })
                </td>
                <td class="col-sm-2">
                    @Html.TextBoxFor(m => m.Cantidad, new { id = "CantidadId", onKeyPress = "return soloNumeros(event)", @class = "form-control", Style = "width:90%", maxlength = 50 })
                    @Html.ValidationMessageFor(m => m.Cantidad, "", new { @class = "text-danger" })
                </td>
                <td class="col-sm-2">
                    @Html.TextBoxFor(m => m.Codigo, new { id = "CodigoId", @class = "form-control", Style = "width:90%", maxlength = 50 })
                    @Html.ValidationMessageFor(m => m.Codigo, "", new { @class = "text-danger" })
                </td>
                <td class="col-sm-2">
                    @Html.TextBoxFor(m => m.ValorUnitario, new { id = "ValorUnitarioID", @class = "form-control", Style = "width:90%", maxlength = 50 })
                    @Html.ValidationMessageFor(m => m.ValorUnitario, "", new { @class = "text-danger" })
                </td>
                <td class="col-sm-2">
                    @Html.TextBoxFor(m => m.SubTotal, new { id = "SubTotalId", @class = "form-control", Style = "width:90%", maxlength = 50 })
                    @Html.ValidationMessageFor(m => m.SubTotal, "", new { @class = "text-danger" })
                </td>
                <td class="col-sm-2">
                    @Html.TextBoxFor(m => m.HoraParHombre, new { id = "HhId", @class = "form-control", Style = "width:90%", maxlength = 50 })
                    @Html.ValidationMessageFor(m => m.HoraParHombre, "", new { @class = "text-danger" })
                </td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="5" style="text-align: left;">
                    <button id="btnCrearRep" class="btn btn-success btn-sm">Agregar Repuesto</button>
                </td>
            </tr>
        </tfoot>
    </table>

</div>
