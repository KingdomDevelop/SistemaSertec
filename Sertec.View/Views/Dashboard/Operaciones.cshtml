                            <td>
                                @Html.TextBoxFor(m => m.TecEmisor, new { id = "TxtEmisor", @readonly = "readonly" })
                            </td>
                        </tr>
                        <tr>
                            <td>SUPERVISOR</td>
                            <td>
                                @Html.TextBoxFor(m => m.Supervisor, new { id = "TxtSuper", @readonly = "readonly" })
